{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Run Othello tests",
            "command": "dotnet test test/Lethargic.BoardGames.Othello.Test",
            "type": "shell",
            "group": "test",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Run chess tests",
            "command": "dotnet test test/Lethargic.BoardGames.Chess.Test",
            "type": "shell",
            "group": "test",
            "presentation": {
                "reveal": "always"
                
            },
            "problemMatcher": "$msCompile"
        }
    ]
}